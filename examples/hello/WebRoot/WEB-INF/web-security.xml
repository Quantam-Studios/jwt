<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <listener>
    <listener-class>eu.webtoolkit.jwt.ServletInit</listener-class>
  </listener>

  <!-- This applies only to servlet 3.0 -->
   <session-config>
    <tracking-mode>URL</tracking-mode>
  </session-config>

  <servlet>
    <servlet-name>Hello</servlet-name>
    <display-name>JWt Hello World example</display-name>
    <description>JWt Hello World example</description>
    <servlet-class>eu.webtoolkit.jwt.examples.hello.HelloMain</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/protected/*</url-pattern>
  </servlet-mapping>
  
  <security-constraint>
	<web-resource-collection>
       	<web-resource-name>Protected Area</web-resource-name>
        	<url-pattern>/protected/*</url-pattern>
        	<http-method>PUT</http-method>
        	<http-method>DELETE</http-method>
        	<http-method>GET</http-method>
	        <http-method>POST</http-method>
    	</web-resource-collection>
    	<auth-constraint>
        	<role-name>manager</role-name>
	    </auth-constraint>
  </security-constraint>

  <security-role>
    	<role-name>manager</role-name>
  </security-role>

  <login-config>
    <auth-method>FORM</auth-method>
    <!-- <realm-name>Test Realm</realm-name> -->
    <form-login-config>
        <form-login-page>/login.jsp</form-login-page>
        <form-error-page>/error.html</form-error-page>
    </form-login-config>
  </login-config>

</web-app>

